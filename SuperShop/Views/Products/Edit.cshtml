@*Passo 24: Alterar o model para ProductViewModel*@
@model SuperShop.Models.ProductViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Product</h1>

@*<h4>Product</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
       @* Passo 25: Inserir o enctype="multipart/form-data"*@
        <form asp-action="Edit" enctype="multipart/form-data"> 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @* Passo 27: Inserir a ImageUrl escondido no caso de o utilizador nao escolher uma imagem ou seja vazio*@
            <input type="hidden" asp-for="ImageId" />
            <partial name="_Products" /> @*Chamar a views partcial*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
    @*Passo 36: Abrir uma dive e dentro desta dive criar as colunas de 4*@
    <div class="col-md-4">
        @* Passo 37: Inserir a imagem Editada na web no HTML*@
  @*  @if (!string.IsNullOrEmpty(Model.ImageFullPath))  @*Se nao haver imagem (vazio ou nulo), cria uma imagem*@
        
       <img src="@Url.Content(Model.ImageFullPath)" alt="Image" style="width:300px; height:450px; max-width:100%; height:auto">
        
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
