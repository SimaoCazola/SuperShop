@model SuperShop.Data.Entities.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Product Details</h1>

<hr />

<div class="row">

    <div class="col-md-4">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            @* Passo 38: Apagar o  @Html.DisplayNameFor(model => model.ImageUrl) porque nao vai ser utilizado*@
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastPurchase)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastPurchase)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastSale)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastSale)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsAvailable)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsAvailable)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Stock)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Stock)
            </dd>
        </dl>
    </div>
    @*Passo 39: Abrir uma dive e dentro desta dive criar as colunas de 4*@
    <div class="col-md-4">
        @* Passo 40: Inserir a imagem por detalhar na web no HTML*@
       @* @if (!string.IsNullOrEmpty(Model.ImageUrl))*@  @*Se nao haver imagem (vazio ou nulo), cria uma imagem*@
        
            <img src="@Url.Content(Model.ImageFullPath)" alt="Image" style="width:300px; height:450px; max-width:100%; height:auto">
        
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> 
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>
